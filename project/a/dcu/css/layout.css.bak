@charset "UTF-8";

/****************** 레이아웃 *******************/

/******************전체 레이아웃******************/
#wrap {width:100%;overflow:hidden;}

/* 헤더 */
#header {width:100%;height:140px;position:relative;margin:0 auto;
	font-size:12px;background:#fff;}
#header .top {width:100%;height:46px;background:#252525;position:relative;
	margin:0 auto;border-bottom:1px solid #d9dfe5;}
#header .top .top_box{width:1198px;margin:0 auto;}
#header .top .top_box li a {color:#fff;}

#header .top .top_box .top_link {height:46px;overflow:hidden;}
#header .top li {float:left;line-height:46px;padding:0 5px;}
.fl_left {float:left;}
.fl_right {float:right;}


/* 메뉴 */
#gnb {width:1198px;margin:0 auto;height:94px;}
#gnb h1{float:left;width:200px;padding-top:24px;}
#gnb li {float:left;font-size:18px;line-height:94px;padding:0 15px;}
#gnb li a:hover {color:#047b6f;}

/* 라인 */
.line {border-bottom:3px solid #047b6f;}

/* 메인이미지 */
.mvisual {position:relative;width:100%;overflow:hidden;height:750px;}
.mvisual {border-bottom:4px solid #7a9f22;}

/* 섹션1 */
.main_depart {background:#f1f5f8;height:350px;}
.marea {width:1200px;margin:0 auto;padding:50px 0;overflow:hidden;}
.marea .mtit {text-align:center;}
.marea .mtit h2 {font-size:46px; color:#000;}